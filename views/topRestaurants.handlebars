<h1>人氣餐廳</h1>
<hr/>

{{#each restaurants}}
<div class="card mb-3" style="max-width: 540px;margin: auto;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <a href="/restaurants/{{this.id}}">
        <img class="card-img" src="{{this.image}}">
      </a>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <span class="badge badge-secondary">收藏數：{{this.Favorites.length}}</span>
        <p class="card-text">{{this.description}}</p>
          <a href="/restaurants/{{this.id}}"><button type="button" class="btn btn-primary">Show</button></a>
          {{#if this.isFavorited }}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;"><button type="submit" class="btn btn-danger">移除最愛</button></form>
          {{else}}
            <form action="/favorite/{{this.id}}" method="POST" style="display: contents;"><button type="submit" class="btn btn-primary">加到最愛</button></form>
          {{/if}}
      </div>
    </div>
  </div>
</div>
{{/each}}




